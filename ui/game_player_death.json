{ "type":      "frame",
  "width":     200,
  "height":    140,
  "modal":     true,
  "on-unload": "on_window_unload",
  "children":  [
    { "type":     "grid",
      "children": [
        { "type":     "row",
          "children": [
            { "type":     "grid",
              "x":        10,
              "y":        10,
              "children": [
                { "type":     "row",
                  "children": [
                    { "type":     "text",
                      "x":        30,
                      "title":    "You are dead.",
                      "title-fi": "Olet kuollut."
                    }
                  ]
                },
                { "type":     "row",
                  "children": [
                    { "type":     "text",
                      "title":    "Diamond score: ${score}",
                      "title-fi": "Timanttipisteet: ${score}"
                    }
                  ]
                }
              ]
            }
          ]
        },
        { "type":     "row",
          "children": [
            { "type":      "grid",
              "y":         10,
              "padding-y": 2,
              "children":  [
                { "type":     "row",
                  "children": [
                    { "type":       "button",
                      "title":      "Continue",
                      "title-fi":   "Jatka",
                      "id":         "game_player_death_play",
                      "x":          50,
                      "width":      100,
                      "focus":      true,
                      "on-release": "on_play_clicked"
                    }
                  ]
                },
                { "type":     "row",
                  "children": [
                    { "type":          "button",
                      "title":         "Save",
                      "title-fi":      "Tallenna",
                      "id":            "game_player_death_save",
                      "x":             50,
                      "width":         100,
                      "on-release":    "on_save_clicked",
                      "navigation-up": [ "game_player_death_play" ]
                    }
                  ]
                },
                { "type":     "row",
                  "children": [
                    { "type":          "button",
                      "title":         "Quit",
                      "title-fi":      "Lopeta",
                      "id":            "game_player_death_quit",
                      "x":             50,
                      "width":         100,
                      "on-release":    "on_quit_clicked",
                      "navigation-up": [ "game_player_death_save" ]
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}
